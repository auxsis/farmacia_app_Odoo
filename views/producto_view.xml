<?xml version="1.0"?>
<odoo>
    <!--Vista de formulario-->
    <record id="view_form_producto" model="ir.ui.view">
        <field name="name">Form Producto</field>
        <field name="model">farmacia.producto</field>
        <field name="arch" type="xml">
            <form string="Producto">
                <header>
                    <!-- Buttons will go here -->
                </header>
                <sheet>
                    <group name="group_top">
                        <group name="group_left">
                            <field name="name"/>
                            <field name="codigo_nacional"/>
                            <field name="descripcion"/>
                        </group>
                        <group name="group_left">
                            <field name="imagen" widget="image"/>
                        </group>
                    </group >
                    <group name="group_bottom">
                        <field name="inventario"/>
                        <field name="proveedor" widget="many2many_tags"/>
                        <field name="coste_proveedor" widget="many2many_tags"/>
                        <field name="coste_venta" widget="many2many_tags"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!--Vista de Lista-->
    <record id="view_tree_producto" model="ir.ui.view">
        <field name="name">Lista de productos</field>
        <field name="model">farmacia.producto</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="codigo_nacional"/>
                <field name="name"/>
                <field name="proveedor" widget="many2many_tags"/>
                <field name="inventario"/>
                <field name="coste_proveedor" widget="many2many_tags"/>
                <field name="coste_venta" widget="many2many_tags"/>
            </tree>
        </field>
    </record>



</odoo>