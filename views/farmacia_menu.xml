                name="Productos"
                res_model="farmacia.producto"
                view_mode="tree,form"/>

    <menuitem id="menu_farmacia_producto"
              name="Producto"
              action="action_farmacia_producto"
              parent="farmacia_menu"/>

    <!-- STOCK -->
    <act_window id="action_farmacia_stock"
                name="Stock"
                res_model="farmacia.stock"
                view_mode="tree,form"/>

    <menuitem id="menu_farmacia_stock"
              name="Stock"
              action="action_farmacia_stock"
              parent="farmacia_menu"/>

    <!--Proveedores -->
    <act_window id="action_farmacia_proveedores"
                name="Proveedores"
                res_model="farmacia.proveedores"
                view_mode="tree, form"
                />
    <menuitem id="menu_farmacia_proveedores"
              name="Proveedores"
                action="action_farmacia_proveedores"
                parent="farmacia_menu"/>
    <!-- Pedidos compra -->
    <act_window id="action_farmacia_pedidoscompra"
                name="Pedidos Compra"
